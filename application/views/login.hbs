  <body>

    <form
      class="container"
      method="POST"
      action="/users/login"
      enctype="application/x-www-form-urlencoded"
    >
      <label for="Username" class="username">Username </label>
      <input
        type="text"
        id="name"
        required
        name="username"
        placeholder="Siddharths23"
      /><br />
      <label for="password" class="password">Password </label>
      <input
        type="password"
        id="password"
        required
        name="password"
        placeholder="*******"
      /><br />
      <input type="submit" value="Submit" class="btn" />
    </form>
  </body>
</html>